    <div class="content">
        <div class="api">
            <h2>API Usage</h2>
            <p>
                GET
                <a href="http://www.zlatanjokes.site/joke">http://www.zlatanjokes.site/joke</a>

                <button id="button"><i class="fas fa-redo"></i></button>
            </p>

            <p>{</p>
            <pre id="joke">  "joke": "When Zlatan goes to your place to visit you, you're the guest." </pre>
            <p>}</p>
        </div>
        <div class="information">
            <p>
                Use the API limitedly as the backend is hosted on free tier servers, I
                am broke AF üòÖ
            </p>
        </div>
    </div>
    <script>
        const button = document.getElementById('button');
        button.addEventListener('click',()=>{
            fetch('http://www.zlatanjokes.site/joke')
            .then(res=>{
            return res.json();
            })
            .then(data=>{
            const newJoke = data.joke;
            document.getElementById('joke').innerHTML = '  "joke": '+'"'+newJoke+'"';

            
            });

        });
    </script>
   
